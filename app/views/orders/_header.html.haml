.header
  .logo
    = link_to root_path do
      = image_tag src="/assets/logo3.jpg",size: "200x50"
  .menu-box
    - if current_user.authority != 1
      %ul.menu-box__list
        %li.menu-box__list__btn
          .menu-box__list__btn__hover
          .menu-box__list__btn__body
            = link_to new_order_path do
              %p.fas.fa-external-link-alt
                新規発注
        %li.menu-box__list__btn
          .menu-box__list__btn__hover
          .menu-box__list__btn__body
            = link_to history_orders_path do
              %p.fas.fa-history
                履歴
        %li.menu-box__list__btn
          .menu-box__list__btn__hover
          .menu-box__list__btn__body
            = link_to edit_user_path(current_user) do
              %p.fas.fa-home
                ログアウト
    - if current_user.authority == 1
      %ul.menu-box__list
        %li.menu-box__list__btn
          .menu-box__list__btn__hover
          .menu-box__list__btn__body
            = link_to history_orders_path do
              %p.fas.fa-history
                履歴
        %li.menu-box__list__btn
          .menu-box__list__btn__hover
          .menu-box__list__btn__body
            = link_to edit_user_path(current_user) do
              %p.fas.fa-home
                ログアウト
  .user__content  
    %p.user__content__company
      = current_user.company
    %p.user__content__name
      = current_user.name